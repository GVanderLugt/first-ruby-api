<h1>Listing Users</h1>

<%= link_to "New User", new_user_path %>

<table>
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Show", user_path(user) %></td>
      <td><%= link_to "Destroy", user_path(user),
              method: :delete,
              data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
